<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div><%= message %></div>
  <% end %>
<% end %>

<%= form_with model: @photo, local: true do |f| %>
  <div class="field">
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.text_area :caption, class: 'textarea' %>
  </div>
  <%= f.submit class: 'button is-primary' %>
<% end %>
